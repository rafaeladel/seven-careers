<p id="notice"><%= notice %></p>

<h1>Listing Candidates for <%= @job.title %> vacancy.</h1>
<% if @job.seven_careers_candidates.exists? %>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Resume</th>
    <th>Applied At</th>
  </tr>
  </thead>

  <tbody>




  <% @job.seven_careers_candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.name %></td>
        <td><%= candidate.email %></td>
        <td><%= candidate.phone %></td>
        <td><%= link_to "Download Resume", "/uploads/resumes/#{candidate.resume_path}" %></td>
        <td><%= candidate.created_at %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<% else %>
    No candidates applied fot this job.

<% end %>