<p id="notice"><%= notice %></p>

Job Title <%= @job.title %>
Description <%= @job.description %>

<p>Candidates: </p>
<% if @job.candidates.any? %>
    <table>
      <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @job.candidates.each do |candidate| %>
          <tr>
            <td><span><%= candidate.name %></span></td>
            <td><%= link_to 'Show', job_candidate_url(@job, candidate) %></td>
            <td><%= link_to 'Destroy', job_candidate_url(@job, candidate), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <p>There's no candidates.</p>
<% end %>

<%= link_to "apply", new_job_candidate_path(@job) %>

<%= link_to 'Edit', edit_job_path(@job) %> |
<%= link_to 'Back', jobs_path %>
